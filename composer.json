{
  "name": "lendable/gocardless-enterprise-bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "description": "Integration of GoCardless enterprise library into Symfony",
  "keywords": ["gocardless", "symfony", "bundle", "lendable"],
  "authors": [
    {
      "name": "Lendable Ltd",
      "email": "dev@lendable.co.uk"
    }
  ],
  
  "autoload": {
    "psr-4": {
      "Gocardless\\EnterpriseBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gocardless\\EnterpriseBundle\\Tests\\": "tests/"
    }
  },
  
  "require": {
    "php": ">=5.5",
    "gocardless/enterprise": "^5.0",
    "stof/doctrine-extensions-bundle": "*",
    "symfony/symfony": "~2.7|~3.0|~4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "*",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "sensiolabs/security-checker": "^4.1"
  },
  
  "scripts": {
    "validate-files": [
      "bin/parallel-lint --exclude vendor ."
    ],
    "check-code-style": [
      "bin/php-cs-fixer fix --config='./.php_cs' --show-progress=none --dry-run --no-interaction --diff -v"
    ],
    "fix-code-style": [
      "bin/php-cs-fixer fix --config='./.php_cs' --show-progress=none --no-interaction --diff -v"
    ],
    "check-security": [
      "bin/security-checker security:check"
    ]
  },
  
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "prefer-stable": true
}
